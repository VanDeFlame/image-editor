{
	"compilerOptions": {
		"target": "ES2022",
		"module": "CommonJS",
		"moduleResolution": "Node10",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"allowArbitraryExtensions": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"resolveJsonModule": true
	},
	"include": ["server/**/*"]
}
